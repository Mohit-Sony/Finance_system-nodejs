overview list

<section id="overview_list">
    <div id="overview-search-container">
        <div id="search-cont" class="flex-left">
            <div>
                <form action="/" method="get">
                <input type="text" name="search-input" id="search-input" placeholder="search">
                <input type="submit" value= "search" >
                </form>
            </div>
        </div>
        <div id="new-debitor-btn-cont" class="flex-right">
            <div>
                <a href="/debitor/new" class="btn">
                    create new debitor
                </a>
            </div>

        </div>
    </div>

    <div id="overview-list-container">
        <table class="table table-hover table-sm table-sortable">
            <thead class="thead-dark">
                <tr>
                    <th data-sort="string">Name</th>
                    <th data-sort="int">Credit Left</th>
                    <th data-sort="int">Kist left</th>
                    <th data-sort="date">Last payment</th>
                    <th>Recive Payment</th>
                    <th>Notification</th>
                </tr>
            </thead>
            <tbody>
                <%- include('partials/overview_par_list.ejs') %>


            </tbody>
        </table>

    </div>


</section>